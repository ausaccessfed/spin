<%= form_for(@role, html: {id: 'role-form'}) do |f| -%>
  <%= field_block do -%>
    <%= f.label :name %>
    <%= f.text_field :name %>
  <%- end -%>

  <%= error_messages_tag %>

  <div class="line-of-buttons">
    <%= f.button(class: 'large green icon') do -%>
      <%= icon_tag('checkmark') %>
      <%= submit_label %>
    <%- end -%>

    <%= button_link_to(roles_path, class: 'large icon') do -%>
      <%= icon_tag('cancel') %>
      Cancel
    <%- end -%>
  </div>
<%- end -%>
<%= validate_form('#role-form', :role) do -%>
  <%= auto_validate(@role, :name) %>
<%- end -%>
